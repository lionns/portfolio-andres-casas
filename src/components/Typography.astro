---
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{
  as: Tag;
  variant: keyof typeof variantClasses;
}>;

const { as: Tag, class: className, variant, ...props } = Astro.props;

const variantClasses: { [key: string]: string } = {
  title: "font-[NohemiBold] leading-none text-[var(--color-lavande-white)] text-2xl",
  subtitle: "font-[NohemiLight] leading-none text-[var(--color-lavande-white)] inline-block p-2 rounded-2xl border-[1px] border-[var(--color-card-border)] bg-[var(--color-card-background)]",
  body: "font-[Nohemi] leading-[24px] text-[var(--color-lavande-white)] leading-2",
};

const classes = [variantClasses[variant], className];
---

<Tag class:list={classes} {...props} tabindex="0">
  <slot />
</Tag>