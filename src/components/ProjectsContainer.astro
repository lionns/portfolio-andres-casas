---
import Card from "./Card.astro";
import ProjectCard from "./ProjectCard.astro";
import Typography from "./Typography.astro";
---

<Card>
  <Typography as="h2" variant="subtitle">proyectos</Typography>
  <ProjectCard
    projectName="Análisis de los planetas"
    projectDescription="Análisis de datos planetarios para detectar patrones y predecir características de exoplanetas."
  />
  <ProjectCard
    projectName="Crecimiento de plantas"
    projectDescription="Análisis de datos para optimizar el crecimiento y salud de las plantas con robots."
  />
  <a
    class="rounded-2xl p-2 border-[1px] border-[var(--color-button-border)] bg-[var(--color-button-background)] hover:bg-[var(--color-button-background-hover)] text-[var(--color-lavande-white)]]"
    href="#">Más proyectos</a
  >
</Card>
